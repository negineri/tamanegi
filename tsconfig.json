{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "assets/*": [
        "assets/*"
      ],
      "src/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
}